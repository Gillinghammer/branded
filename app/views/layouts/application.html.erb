<!DOCTYPE html>
<html>
<head>
  <title>Branded</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class='container-fluid' data-current="<%= current_user.id if current_user%>">
  <p>
      Name: 
      <b data-bind="visible: !editing(), text: email, click: edit">&nbsp;</b>
      <input data-bind="visible: editing, value: email, hasFocus: editing" />
  </p>
  <p><em>Click the name to edit it; click elsewhere to apply changes.</em></p>

  <!-- <p>First name: <input data-bind="
                                  textInput: firstName,
                                  disable: firstName
                                  " /></p>
  <p>Last name: <input data-bind="
                                  textInput: lastName,
                                  disable: lastName
                                  " /></p> -->
  <% if user_signed_in? %>

  <div class="navbar" id="navigation">
    <ul class="nav navbar-nav">
      <% if Company.find(current_user.company_id).facebook_id %>
        <li><a href="#"><strong>Facebook:</strong> <%= Company.find(current_user.company_id).facebook_id %><span class="sr-only">(current)</span></a></li>
      <% else %>
        <li><a href="#" data-social="facebook"><strong>Facebook:</strong> <%= "add your company's Facebook url" %><span class="sr-only">(current)</span></a></li>
      <% end %>
      <% if Company.find(current_user.company_id).twitter_id %>
        <li><a href="#"><strong>Twitter:</strong> <%= Company.find(current_user.company_id).twitter_id %></a></li>
      <% else %>
        <li><a href="#" data-social="twitter"><strong>Twitter:</strong> <%= "and your company's Twitter handle" %></a></li>
      <% end %>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Settings<span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to(current_user.email, root_path) %></li>
          <li><%= link_to('manage users', root_path) %></li>
          <li class="divider"></li>
          <li><%= link_to('goodbye', destroy_user_session_path, :method => :delete) %></li>
        </ul>
      </li>
    </ul>
  </div>

  <% end %>
  <%= yield %>
  <footer>
    <h5><%= link_to('Login', new_user_session_path) unless user_signed_in?  %></h5>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </footer>
  <script type="text/javascript">
    // ko.applyBindings(companyModel);
  </script>
</body>
</html>
