<!DOCTYPE html>
<html>
<head>
  <title>Branded</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class='container-fluid'>
  <% if user_signed_in? %>

  <div class="navbar" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav">
      <li class="active"><a href="#">Facebook: /TeslaMotors<span class="sr-only">(current)</span></a></li>
      <li><a href="#">Twitter: @teslamotors</a></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Settings<span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to(current_user.email, root_path) %></li>
          <li><%= link_to('manage users', root_path) %></li>
          <li><a href="#">Separated link</a></li>
          <li class="divider"></li>
          <li><%= link_to('goodbye', destroy_user_session_path, :method => :delete) %></li>
        </ul>
      </li>
    </ul>
  </div>

  <% end %>
  <%= yield %>
  <footer>
    <h5><%= link_to('Login', new_user_session_path) unless user_signed_in?  %></h5>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </footer>
</body>
</html>
