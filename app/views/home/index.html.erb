<div id="home" class="row-fluid center-block">
  <div class="panel panel-primary" id="navigation">
    <div class="panel-heading">
        <div class="row-fluid">
          <h3 class="panel-title">
            <span editable-text="company.name" ng-model="company.name" onbeforesave="updateCompany()">{{company.name || 'company name'}}</span>
          </h3>
        </div>
      </div>
      <div class="panel-body">
        <div class="col-xs-4"><strong>Facebook:</strong>
          <span editable-text="company.facebook_id"  onbeforesave="updateCompany()">{{company.facebook_id || 'facebook url'}}</span>
        </div>
        <div class="col-xs-4"><strong>Twitter:</strong>
          <span editable-text="company.twitter_id" onbeforesave="updateCompany()">{{company.twitter_id || 'twitter handle'}}</span>
        </div>
        <div class="col-xs-4">
            <div class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><strong>Settings<span class="caret"></span></strong></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to('manage users', root_path) %></li>
                <li class="divider"></li>
                <li class="text-center"><%= link_to('goodbye', destroy_user_session_path, :method => :delete) %></li>
              </ul>
            </div
        </div>
      </div>
      <!-- <button ng-click="updateCompany()">Update Company</button> -->
  </div>
  <div id="searchForm" class="col-xs-12 well well-lg">
    <form class="row-fluid">
      <p class="lead text-center">Provide your candidate's email and social networks to see information.</p>
      <div class="form-group col-xs-12">
        <div class="input-group input-group-lg">
          <span class="input-group-addon" id="emailaddress"><i class="fa fa-envelope fa-lg"></i></span>
          <input type="text" class="form-control" placeholder="Candidate Email" ng-model="candidate.email" ng-blur="lookupPerson(candidate.email)" aria-describedby="basic-addon1">
        </div>
      </div>
      <div class="form-group col-xs-12">
        <div class="input-group input-group-lg">
          <span class="input-group-addon" id="facebook_id"><i class="fa fa-facebook-square fa-lg"></i></span>
          <input type="text" class="form-control" placeholder="Candidate Facebook" ng-model="candidate.facebook" aria-describedby="basic-addon1">
        </div>
      </div>
      <div class="form-group col-xs-12">
        <div class="input-group input-group-lg">
          <span class="input-group-addon" id="twitter_id"><i class="fa fa-twitter-square fa-lg"></i></span>
          <input type="text" class="form-control" placeholder="Canidate Twitter" ng-model="candidate.twitter" aria-describedby="basic-addon1">
        </div>
      </div>
      <div class="form-group col-xs-12">
        <button type="submit" class="btn btn-success btn-lg btn-block">Submit</button>
      </div>
    </form>
  </div>
</div>